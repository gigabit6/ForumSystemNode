<a href="/answer/edit/{{this._id}}">Edit Answer</a>
<form action="/answer/delete/{{_id}}" method="POST">
    <input type="submit" value="Delete">
</form>
{{/if}}
</br>
{{/each}}
<form action="/answer/add" method="POST">
    <input type="hidden" value="{{_id}}" name="thread" />
    <input type="text" name="text" />
    <input type="submit" value="Submit">
</form>